@model ASP_P22.Data.Entities.Category

<a asp-controller="Shop" asp-action="Category" asp-route-id="@(Model.Slug)">
<div class="card mx-3" style="width: 24rem;">
    <img src="@(Model.ImagesCsv?.Split(',').First())" class="card-img-top" alt="Photo">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
</div>
</a>